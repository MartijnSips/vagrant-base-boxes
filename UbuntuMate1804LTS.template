Vagrant.configure(2) do |config|

  config.vm.guest = :linux

  # Mount host folders ...
  config.vm.synced_folder "#{ENV["USERPROFILE"]}/Documents", "/home/vagrant/Documents"
  config.vm.synced_folder "#{ENV["USERPROFILE"]}/Downloads", "/home/vagrant/Downloads"

  config.vm.provider :virtualbox do |vb|
	  vb.gui = true
  end
  
end