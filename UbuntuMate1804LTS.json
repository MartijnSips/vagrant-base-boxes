{
  "builders": [
   {
    "type": "virtualbox-iso",
    "name": "virtualbox",
    "output_directory": "{{user `output_directory`}}",
    "boot_command": [
        "<esc><f6><esc>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "initrd=/install/initrd.gz ",
        "auto=true ",
        "url=http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `preseed_file`}} ",
        "language={{user `language`}} ",
        "country={{user `country`}} ",
        "locale={{user `locale`}} ",
        "hostname={{user `vm_name`}} ",
        "domain={{user `domain`}} ",
        "interface=auto ",
        "console-setup/ask_detect=false ",
        "keyboard-configuration/layoutcode={{user `keyboard`}} ",
        "vga=788 noprompt quiet --<enter>"
      ],
      "boot_wait": "{{user `boot_wait`}}",
      "communicator": "{{user `communicator`}}",
      "disk_size": "{{user `disk_size`}}",
      "format": "ova",
      "guest_additions_mode": "disable",
      "guest_os_type": "Ubuntu_64",
      "hard_drive_discard": false,
      "hard_drive_interface": "sata",
      "hard_drive_nonrotational": false,
      "headless": "{{user `headless`}}",
      "http_directory": "{{user `http_directory`}}",
      "http_port_max": "{{user `http_port_max`}}",
      "http_port_min": "{{user `http_port_min`}}",
      "iso_checksum_url": "{{user `iso_checksum_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "keep_registered": false,
      "post_shutdown_delay": "0s",
      "shutdown_command": "echo '{{user `ssh_password`}}' | sudo -E -S poweroff",
      "shutdown_timeout": "{{user `shutdown_timeout`}}",
      "skip_export": false,
      "ssh_disable_agent_forwarding": "{{user `ssh_disable_agent_forwarding`}}",
      "ssh_file_transfer_method": "{{user `ssh_file_transfer_method`}}",
      "ssh_handshake_attempts": "{{user `ssh_handshake_attempts`}}",
      "ssh_host_port_max": "{{user `ssh_host_port_max`}}",
      "ssh_host_port_min": "{{user `ssh_host_port_min`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": "{{user `ssh_port`}}",
      "ssh_pty": "{{user `ssh_pty`}}",
      "ssh_skip_nat_mapping": false,
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `ram_size`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "virtualbox_version_file": "/tmp/.vbox_version",
      "vm_name": "{{user `vm_name`}}"
    }
  ],
  "provisioners": [
    {
	  "type": "shell",
      "execute_command": "echo '{{user `ssh_password`}}' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "inline": [
        "echo '========================================================================================================================'",
        "echo 'Install Ubuntu Mate 18.04 desktop ...'",
        "apt-get install -y ubuntu-mate-desktop",
        "echo 'Adding vagrant to sudoers list ...'",
        "echo 'vagrant ALL=NOPASSWD:ALL' > /etc/sudoers.d/vagrant",
        "echo 'Install vagrant SSH key ...'",
        "mkdir -pm 700 /home/vagrant/.ssh",
        "wget --no-check-certificate https://raw.github.com/mitchellh/vagrant/master/keys/vagrant.pub -O /home/vagrant/.ssh/authorized_keys",
        "chmod 0600 /home/vagrant/.ssh/authorized_keys",
        "chown -R vagrant:vagrant /home/vagrant/.ssh",
        "echo Installing VirtualBox Guest Additions {{ .Version }} ...",
        "apt-get update && sudo apt-get upgrade -y",
        "apt-get install gcc make perl -y", 
        "apt-get install virtualbox-guest-additions-iso -y",
        "mkdir /tmp/isomount",
        "mount -t iso9660 -o loop /usr/share/virtualbox/VBoxGuestAdditions.iso /tmp/isomount",
        "/tmp/isomount/VBoxLinuxAdditions.run",
        "echo Updating/Upgrading ubuntu ...",
        "apt-get install ansible -y",
        "apt-get update && sudo apt-get upgrade -y"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "keep_input_artifact": false,
        "vagrantfile_template": "{{user `vm_name`}}.template",
        "output": "packer_{{user `vm_name`}}_{{.Provider}}.box"
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "martijnsips/{{ user `vm_name` }}",
        "access_token": "{{ user `cloud_token` }}",
        "version": "{{ user `version` }}"
      }
    ]
  ],
  "variables": {
    "boot_wait": "3s",
    "communicator": "ssh",
    "country": "US",
    "description": "Base box for 64-bit x86 Ubuntu Bionic Beaver 18.04.1 LTS",
    "disk_size": "50000",
    "domain": "",
    "headless": "false",
    "http_directory": ".",
    "http_port_max": "9000",
    "http_port_min": "8000",
    "iso_checksum_type": "sha256",
    "iso_checksum_url": "http://cdimage.ubuntu.com/ubuntu/releases/18.04/release/SHA256SUMS",
    "iso_url": "http://cdimage.ubuntu.com/ubuntu/releases/18.04/release/ubuntu-18.04.1-server-amd64.iso",
    "keyboard": "us",
    "language": "en",
    "locale": "en_US.UTF-8",
    "output_directory": "build/{{isotime \"2006-01-02-15-04-05\"}}",
    "packer_cache_dir": "{{env `PACKER_CACHE_DIR`}}",
    "preseed_file": "scripts/ubuntu/1804/preseed.cfg",
    "qemu_binary": "qemu-system-x86_64",
    "ram_size": "2048",
    "shutdown_timeout": "5m",
    "ssh_disable_agent_forwarding": "false",
    "ssh_file_transfer_method": "scp",
    "ssh_handshake_attempts": "10",
    "ssh_host_port_max": "4444",
    "ssh_host_port_min": "2222",
    "ssh_password": "vagrant",
    "ssh_port": "22",
    "ssh_pty": "false",
    "ssh_timeout": "60m",
    "ssh_username": "vagrant",
    "start_retry_timeout": "5m",
    "vm_name": "UbuntuMate1804LTS",
    "cloud_token": "v7eyWXFdn4zilg.atlasv1.HvNzyZ9zVO6sLvUUrPwS4Q7BGFm0Kyq4vTAzgIzNSra2uUQF7HhaHQoQzxzyBkcC3Xs",
	  "version": "1.0.1"
  }
}